﻿@using BookManagerApp.Data.Enum
@model Shelf

<h3>Are you sure you want to delete this shelf?</h3>

<form method="post" asp-action="Delete" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name of your new shelf">
        <span style="color: red" asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description of your shelf">
    </div>
    <div class="form-group">
        <label asp-for="Icon">Icon</label>
        <input asp-for="Icon" type="file" class="form-control" placeholder="URL for the icon of your liking">
    </div>
</form>

<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>